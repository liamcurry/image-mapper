@import 'nib'

*
  box-sizing border-box
  margin 0
  padding 0

html, body
  height 100%

body
  background #fff
  color #333
  font-family Helvetica, Arial, sans-serif
  line-height 30px

  &.state-dragging, &.state-resizing

    *
      user-select none

  &.state-started

    #edit, #preview

      .content
        display block

    #empty
      display none

a
  color #0088cc

canvas
  display block
  margin 0 auto

#header
  background #333
  color #fff

#edit, #preview

  .content
    display none

#empty
  border 2px dotted #ccc
  height 200px
  margin 200px auto 0
  padding 85px 0
  text-align center
  width 70%

#selection, #code
  bottom 0
  height 300px
  position fixed
  width 50%

#selection
  left 0

  ul
    clear both
    overflow hidden

  li
    float left
    list-style none

  label
    display block
    font-size 14px
    font-weight 700
    line-height 30px

  input, select, option, textarea
    display block
    padding 5px
    height 30px
    width 100%

#code
  left 50%

  textarea
    border 0
    font-family Courier, monospace
    font-size 14px
    height 230px

#preview

  .content

    img
      display block
      margin 0 auto

#generated
  width 100%

.button
  display block
  float left
  padding 10px

#field-url
  padding-right 10px
  width 75%

#field-target
  width 25%

#field-alt
  width 100%

#field-x, #field-y, #field-width, #field-height
  padding-right 10px
  width 25%

  &:last-child
    padding-right 0

section
  background #fff
  float left
  overflow hidden
  width 50%

  h2
    font-size 12px
    padding 0 10px

  .header
    background #ccc
    border 1px solid #fff
    color #333

  .content
    float left
    padding 10px
    width 100%

.button
  border-radius 5px
  color #fff
  display block
  float left
  font-weight 700
  text-align center
  text-decoration none
  transition .3s background
  width 50%

#remove
  background #E74C3C

  &:hover
    background #C0392B

#add
  background #3498DB

  &:hover
    background #2980B9
