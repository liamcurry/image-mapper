@import 'nib'

*
  box-sizing border-box
  margin 0
  padding 0

html, body, #tabs, #sidebar
  height 100%

body
  background #ebebeb
  color #333
  font-family Helvetica, Arial, sans-serif
  line-height 20px
  margin 10px

  &.state-dragging, &.state-resizing

    *
      user-select none

  &.state-started

    canvas
      display block

    .empty
      display none

h1
  margin 0 0 30px
  text-shadow 1px 0 0 #fff

a
  color #0088cc

canvas
  display none
  margin 0 auto

.empty
  padding 40px 0
  text-align center

#tabs
  float left
  padding-right 10px
  width 60%

  #tabs-nav

    a
      padding 5px 30px

      &.selected
        background #fff

  .tab
    display none

  .tab.selected
    display block

#sidebar
  float left
  width 40%

  #selection

    ul
      clear both
      overflow hidden

    li
      float left
      list-style none

    label, input, select, option, textarea
      display block
      padding 5px
      height 30px
      width 100%

    select, option
      line-height 30px

  #numbers li
    padding-right 10px
    width 25%

    &:last-child
      padding-right 0

  #urls li

    &:first-child
      padding-right 10px
      width 75%

    &:last-child
      width 25%

  #generated
    width 100%

.section
  overflow hidden
  margin-bottom 20px

  .header
    background #fff
    float left
    font-size 14px
    padding 10px
    clear both
    overflow hidden

  .content
    background #fff
    float left
    padding 10px
    width 100%
