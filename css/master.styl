@import 'nib'

*
  box-sizing border-box
  margin 0
  padding 0

html, body
  height 100%

body
  background #ebebeb
  color #333
  font-family Helvetica, Arial, sans-serif
  line-height 30px
  margin 10px

  &.state-dragging, &.state-resizing

    *
      user-select none

  &.state-started

    canvas
      display block

    .empty
      display none

h1
  margin 0 0 30px
  text-shadow 1px 0 0 #fff

a
  color #0088cc

canvas
  display none
  margin 0 auto

.empty
  padding 40px 0
  text-align center

#tabs
  padding-right 10px

  #tabs-nav

    a
      padding 5px 30px

      &.selected
        background #fff

  .tab
    display none

  .tab.selected
    display block

#selection

  ul
    clear both
    overflow hidden

  li
    float left
    list-style none

  label
    display block
    font-size 14px
    font-weight 700
    line-height 30px

  input, select, option, textarea
    display block
    padding 5px
    height 30px
    width 100%

#preview

  .content

    img
      display block
      margin 0 auto

#edit, #selection
  padding-right 10px

#generated
  width 100%

.button
  display block
  float left
  padding 10px

#field-url
  padding-right 10px
  width 75%

#field-target
  width 25%

#field-alt
  width 100%

#field-x, #field-y, #field-width, #field-height
  padding-right 10px
  width 25%

  &:last-child
    padding-right 0

section
  float left
  overflow hidden
  margin-bottom 20px
  width 50%

  h2
    background #fff
    float left
    font-size 14px
    padding 10px
    clear both
    overflow hidden

  .content
    background #fff
    float left
    padding 10px
    width 100%
