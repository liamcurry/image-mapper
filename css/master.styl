@import 'nib'
@import 'fontello.css'

color-bg = #ebebeb
color-highlight1 = #08c
color-highlight2 = #04c
color1 = #E74C3C
color2 = #E67E22
color3 = #3498DB
color4 = #9B59B6
gradient-strength = 40%
font-body = Helvetica, Arial, sans-serif
font-head = font-body
font-mono = monospace
base-border-radius = 2px
base-line-height = 20px
base-gutter = base-line-height

well()
  border-radius base-border-radius
  padding base-gutter

button(bg=color3, border=#2980B9)
  background bg
  border-radius 16px
  border-color border
  border-style solid
  border-width 0 0 3px
  color #fff
  display block
  font-weight 200
  line-height 30px
  padding 0 base-gutter
  text-align center

  &:active
    border-width 2px 0 0

input()
  border-radius base-border-radius
  border 0
  height 30px
  line-height 20px
  padding 5px

  &:disabled
    opacity .7

*
  box-sizing border-box
  margin 0
  padding 0

html, body
  height 100%

body
  background #ECF0F1
  font-family font-body
  font-weight 200
  line-height base-line-height

a
  color #3498DB
  text-decoration none

  &:hover
    color #2980B9

input, textarea, select, option
  input()

#header
  margin 50px auto 0
  overflow hidden
  width 480px

  h1
    color #2C3E50
    font-size 48px
    font-weight 200
    margin 0
    line-height 60px
    padding 0 base-gutter
    text-align center

  nav
    display none
    float right
    padding 15px base-gutter
    width 30%

  #restart
    button()
    width 100%

#state-begin
  clearfix()
  color #2C3E50
  font-size 24px
  height 400px
  margin 0 auto
  text-align center
  width 960px

#begin-intro
  height 110px
  line-height 110px
  text-align center

#begin-inputs
  margin 0 auto
  overflow hidden
  padding 0

  li
    float left
    list-style none
    height 100px
    width 50%

    i
      font-size 48px
      display block
      float left
      height 100px
      line-height 100px
      text-align center
      width 100px

    .begin-text
      display block
      float left
      line-height 100px

  #begin-browse
    position relative

    .begin-text
      position relative
      z-index 1

    input
      display block
      height 100%
      left 0
      position absolute
      opacity 0
      top 0
      z-index 2
      width 100%

  #begin-enter

    input
      background transparent
      border 2px solid #BDC3C7
      display block
      font-size 18px
      height 60px
      margin-top 20px
      width 350px

      &:active, &:focus
        background #fff

  #begin-example
    height auto
    margin-top 40px
    text-align center
    width 100%

    .begin-text
      button()
      border-radius 30px
      float none
      line-height 60px

.state-started
  background #34495E

  #state-begin
    display none

  #state-started
    display block

  #header
    background #ECF0F1
    border-bottom 1px solid #2C3E50
    left 0
    height 61px
    margin 0
    position absolute
    top 0
    width 100%

    h1
      float left
      font-size 20px

    nav
      display block

#state-started
  display none
  height 100%
  padding-top 61px

.pane-stack
  float left
  height 100%

  &:first-child
    position relative
    width 70%

    .pane-group
      height 100%

      .pane-content
        display none

      .pane-selected
        display block

    .pane-header
      padding-top 20px
      padding-left base-gutter

      .pane-selected
        color #fff
        background #2C3E50
        border-radius 16px

      a
        color #7F8C8D
        line-height 33px
        height 33px

  &:last-child
    background #2C3E50
    border 10px solid #34495E
    width 30%

    .pane-header
      border-bottom 1px solid #34495E
      color #ECF0F1
      padding 5px 0

.pane

  .pane-header
    overflow hidden
    padding-top 20px
    line-height 33px

    h2, a
      float left
      padding 0 base-gutter

    h2, &
      font-size 14px
      font-weight 200

  .pane-content
    padding base-gutter

#pane-edit
  text-align center

  #pane-edit-help
    bottom 0
    color #95A5A6
    font-size 12px
    left 0
    line-height 40px
    position absolute
    text-align center
    width 100%

    li
      display inline
      list-style none

      &:before
        content 'â€¢'
        opacity .5
        padding 0 10px

      &:first-child:before
        content ''

  nav
    position absolute
    right 20px
    top 20px

    a
      button()
      float left
      margin-right 10px

      &:last-child
        margin-right 0

    #area-remove
      background #E74C3C
      border-color #C0392B
      opacity .5

    #area-add
      background #1ABC9C
      border-color #16A085

.selected #pane-edit nav

  #area-remove
    opacity 1

#pane-preview
  text-align center

#pane-info
  border-bottom 10px solid #34495E
  overflow hidden

  ul
    overflow hidden

  li
    float left
    list-style none
    padding 5px 5px 0

  label
    color #ECF0F1
    display block
    font-size 12px
    font-weight 200

  input, select
    width 100%

  #field-url
    padding-left 0
    padding-top 0
    width 70%

  #field-target
    padding-top 0
    padding-right 0
    width 30%

  #field-alt
    padding-left 0
    padding-right 0
    width 100%

  #field-x, #field-y, #field-height, #field-width
    width 25%

  #field-x
    padding-left 0

  #field-width
    padding-right 0

  #area-remove
    button(#2C3E50)
    margin-bottom 10px

#pane-code

  textarea
    background transparent
    color #ECF0F1
    display block
    font-size 14px
    font-weight 200
    height 300px
    padding 0
    width 100%
